{
    "name": "guillaume0402/ecoride",
    "description": "Projet PHP vanilla pour EcoRide",
    "require": {
        "php": ">=8.2",
        "ext-mongodb": "*",
        "vlucas/phpdotenv": "^5.6",
        "mongodb/mongodb": "^2.1",
        "phpmailer/phpmailer": "^6.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10"
    },
    "scripts": {
        "test": "php -d zend.assertions=1 -d assert.exception=1 ./vendor/bin/phpunit -c phpunit.xml.dist",
        "stan": "php -d memory_limit=1G ./vendor/bin/phpstan analyse"

    }
}
