# =======================================================
# EcoRide — .env.example (TEMPLATE)
# Copie en .env.local (ignoré par Git) puis adapte.
# =======================================================

# ----------------------------
# APPLICATION
# ----------------------------
# dev | prod
APP_ENV=dev

# URL du site (liens e-mails, redirections…)
SITE_URL=http://localhost:8090/

# Timezone applicative
APP_TZ=Europe/Paris


# ----------------------------
# MYSQL
# ----------------------------
DB_HOST=your_host
DB_PORT=3306
DB_NAME=your_database
DB_USER=your_user
DB_PASSWORD=your_password


# ----------------------------
# MONGODB (optionnel)
# ----------------------------
# L'app / scripts acceptent MONGO_DSN ou MONGODB_URI
MONGO_DSN=mongodb://mongo:27017
MONGODB_URI=mongodb://mongo:27017/ecoride
MONGO_DB=ecoride


# ----------------------------
# CLOUDINARY (optionnel)
# ----------------------------
# Ne mets jamais une vraie clé ici
CLOUDINARY_URL=cloudinary://__api_key__:__api_secret__@__cloud_name__


# ----------------------------
# EMAIL / SMTP
# ----------------------------
MAIL_FROM=no-reply@ecoride.local
MAIL_FROM_NAME=EcoRide
MAIL_REPLY_TO=

# Si SMTP_HOST est défini, envoi via SMTP (PHPMailer)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# tls | ssl | (vide pour dev mailpit)
SMTP_SECURE=tls
SMTP_AUTOTLS=1

# 0=OFF, 1=client, 2=client+serveur
SMTP_DEBUG=0


# ----------------------------
# DKIM (optionnel)
# ----------------------------
DKIM_ENABLE=0
DKIM_DOMAIN=
DKIM_SELECTOR=
DKIM_PRIVATE_KEY=
DKIM_PASSPHRASE=


# ----------------------------
# LIST-UNSUBSCRIBE (optionnel)
# ----------------------------
LIST_UNSUBSCRIBE_URL=
LIST_UNSUBSCRIBE_MAILTO=
LIST_UNSUBSCRIBE_POST=0


# ----------------------------
# RÈGLES MÉTIER (constants.php)
# ----------------------------
RIDE_CREATE_FEE_CREDITS=2
AUTO_CANCEL_MINUTES=60
AUTO_EXPIRE_STARTED_MINUTES=120


